---
import { Image } from "astro:assets";
import impactImage from "../assets/population-impact.png";
---

<section class="bg-white py-20">
	<div class="container mx-auto px-4">
		<div class="flex flex-col md:flex-row-reverse items-center gap-12">
			<div class="md:w-1/2">
				<Image
					src={impactImage}
					alt="Grandmother and granddaughter laughing together"
					class="rounded-lg shadow-xl w-full"
					width={600}
					height={400}
				/>
			</div>
			<div class="md:w-1/2">
				<h2
					class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-6"
				>
					Tantangan UMKM di Gunung
				</h2>
				<p class="text-xl text-gray-700"></p>
			</div>
		</div>
	</div>
</section>
